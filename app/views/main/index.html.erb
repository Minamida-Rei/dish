  <%=f.text_area :main_dish, placeholder:"主菜を入力してください", maxlength:"20"%>
  <%=f.text_area :sub_dish, placeholder:"副菜を入力してください", maxlength:"20"%>
  <%=f.text_area :soup, placeholder:"汁物を入力してください", maxlength:"15"%>
  <%=f.submit "登録する"%>
<%end%>
</div>